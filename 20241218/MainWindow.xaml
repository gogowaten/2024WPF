<Window x:Class="_20241218.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20241218"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="600">
  <Window.Resources>
    <Style x:Key="aaa" TargetType="TextBox">
      <Setter Property="Background" Value="White"/>
      <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
      <Style.Triggers>
        <Trigger Property="IsFocused" Value="True">
          <Setter Property="Background" Value="Red"/>
        </Trigger>
      </Style.Triggers>
    </Style>
  </Window.Resources>


  <StackPanel PreviewMouseDown="TextBox_PreviewMouseDown"
              GotFocus="TextBox_GotFocus"
              LostFocus="TextBox_LostFocus">
    <Button Content="aaaaaaaaaaaaa" Height="100" Width="100"/>
    <TextBlock Text="tttttttttt"/>
    <TextBox Text="bbbbbbbb" Style="{DynamicResource aaa}"/>
  </StackPanel>
</Window>
