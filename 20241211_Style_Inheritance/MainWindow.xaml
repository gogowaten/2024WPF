<Window x:Class="_20241211_Style_Inheritance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20241211_Style_Inheritance"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
  <Grid>
    <Canvas>

      <local:TextBlockThumb MyLeft="30" MyTop="10" FontSize="20"
                            MyText="TextBlockThumb" Background="LemonChiffon"
                            DragDelta="Thumb_DragDelta"/>
      <local:EllipseTextThumb MyLeft="50" MyTop="50" MySize="100"
                              MyText="EllipseTextThumb" Background="Gold"
                              DragDelta="Thumb_DragDelta"/>
      
    </Canvas>
  </Grid>
</Window>
