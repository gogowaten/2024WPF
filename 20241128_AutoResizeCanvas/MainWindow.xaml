<Window x:Class="_20241128_AutoResizeCanvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20241128_AutoResizeCanvas"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="600">
  <Canvas>
    <local:AutoResizeCanvas Background="Beige">
      <Rectangle local:AutoResizeCanvas.Left="0" local:AutoResizeCanvas.Top="0"
                 Width="100" Height="20" Fill="RosyBrown"/>
